{
  "_comment": "ELMFIRE Parameter Configuration - Based on irp-wildfire-dataset-gen requirements",

  "dataset": {
    "name": "01-singlefuel",
    "version": "1.0",
    "description": "Single fuel realistic scenario for ELMFIRE simulations"
  },
  
  "output": {
    "tracking_file": "./configuration/input_tracking.txt",
    "header": "run,xign,yign,fuel,slp,asp,ws,wd,m1,m10,m100,cc,ch,cbh,cbd,lhc,lwc,firearea"
  },
  
  "files": {
    "bash_script": "./01-run.sh",
    "elmfire_config": "./elmfire.data.in",
    "fire_area": "../fire_area_most_recent_run.txt"
  },

  "directories": {
    "cases_dir": "./cases",
    "output_dir": "./processed_sims",
    "configuration_dir": "./configuration",
    "postprocess_dir": "./postprocess",
    "output_check_dir": "./output_check"
  },

  "vars_to_track": {
    "FLIN": false,
    "SPREAD_RATE": true,
    "TIME_OF_ARRIVAL": true,
    "CROWN_FIRE": false,
    "FLAME_LENGTH": true,
    "REACTION_INTENSITY": false,
    "HPUA": false,
    "WD20": false,
    "WS20": false,
    "SURFACE_FIRE": false
  },

  "postprocess_vars": {
    "FLIN": "flin",
    "SPREAD_RATE": "vs",
    "TIME_OF_ARRIVAL": "time_of_arrival",
    "CROWN_FIRE": "crown_fire",
    "FLAME_LENGTH": "flame_length",
    "REACTION_INTENSITY": "ir",
    "HPUA": "hpua",
    "WD20": "wd20",
    "WS20": "ws20",
    "SURFACE_FIRE": "surface_fire"
  },

  "domain": {
    "size": 3840.0,
    "simulation_tstop": 259200.0,
    "tstep_minutes": 15.0
  },

  "postprocess": {
    "variables": ["toa", "burnscar"],
    "output_base_dir": "./processed_sims"
  },
  
  "parameters": {
    "ignition": {
      "x_range": [-960, 960],
      "y_range": [-960, 960]
    },
    
    "terrain": {
      "slope_range": [0, 45],
      "aspect_range": [0, 360],
      "elevation": 0
    },
    
    "wind": {
      "speed_range": [0, 31],
      "direction_range": [0, 360]
    },
    
    "moisture": {
      "use_realistic_scenarios": true,
      
      "dead_scenarios": {
        "D1": [3, 4, 5],
        "D2": [6, 7, 8],
        "D3": [9, 10, 11],
        "D4": [12, 13, 14]
      },
      
      "live_scenarios": {
        "L1": [30, 60],
        "L2": [60, 90],
        "L3": [90, 120],
        "L4": [120, 150]
      },
      
      "continuous_sampling": {
        "enabled": false,
        "m1_range": [3, 12],
        "_note": "m10 = m1 + 1, m100 = m1 + 2 (maintains realistic gradients)",
        "live_herbaceous_range": [30, 120],
        "live_woody_range": [60, 150],
        "constraint": "live_woody = live_herbaceous + 30"
      }
    },
    
    "canopy": {
      "cover": 0,
      "height": 0,
      "base_height": 0,
      "bulk_density": 0
    },
    
    "fuel_models": {
      "models": [
        101, 102, 103, 104, 105, 106, 107, 108, 109,
        121, 122, 123, 124,
        141, 142, 143, 144, 145, 146, 147, 148, 149,
        161, 162, 163, 164, 165,
        181, 182, 183, 184, 185, 186, 187, 188, 189,
        201, 202, 203, 204
      ]
    }
  },
  
  "sampling": {
    "strategy": "realistic",
    "_options": "realistic, random, continuous",
    "_notes": {
      "realistic": "sample from D1-D4 x L1-L4 combinations (16 total)",
      "random": "sample uniformly within broader ranges", 
      "continuous": "sample continuously with physical constraints"
    }
  }
}